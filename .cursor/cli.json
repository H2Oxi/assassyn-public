{
  "env": {
    "PYTHONPATH": "${ASSASSYN_HOME}/python:${PYTHONPATH}",
    "ASSASSYN_HOME": "${ASSASSYN_HOME}",
    "CARGO_TARGET_DIR": "${ASSASSYN_HOME}/.sim-runtime-cache",
    "VERILATOR_ROOT": "${ASSASSYN_HOME}/3rd-party/verilator",
    "PATH": "${VERILATOR_ROOT}/bin:${PATH}"
  },
  "commands": {
    "setup": "source setup.sh",
    "setup-no-verilator": "source setup.sh --no-verilator",
    "test": "pytest -n 8 -x python/ci-tests",
    "pylint": "pylint python/assassyn --rcfile=python/assassyn/.pylintrc",
    "sanity-check": "python/ci-tests/test_driver.py"
  }
}
